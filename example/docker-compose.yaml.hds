version: '3'
name: redis-cluster
services:
  {{#each ports}}
  redis-{{port}}:
    image: redis:6
    networks:
      - redis-cluster-networking
    ports:
      - {{port}}:{{port}}
      - {{clusterPort}}:{{clusterPort}}
    command: redis-server /usr/local/etc/redis/redis.conf
    volumes:
      - ../{{port}}/example/redis.conf:/usr/local/etc/redis/redis.conf
  {{/each}}

networks:
  redis-cluster-networking:
    driver: bridge